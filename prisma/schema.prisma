generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id               Int     @id @default(autoincrement())
  address          String  @unique
  telegramUsername String? @unique
  upline           String
  blockNumber      Int     @default(0)
  Nft              Nft[]

  @@index([telegramUsername])
  @@index([address])
}

model Config {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String @default("")

  @@index([key])
}

model Nft {
  id          Int    @id @default(autoincrement())
  type        String
  owner       User   @relation(fields: [idNft], references: [address])
  idNft       String
  url         String
  probability Int

  @@index([idNft])
}
