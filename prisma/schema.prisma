generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id               Int     @id @default(autoincrement())
  address          String  @unique
  telegramUsername String? @unique
  upline           String
  blockNumber      Int     @default(0)

  @@index([telegramUsername])
  @@index([address])
}

model Config {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String @default("")

  @@index([key])
}

model NFT {
  id          Int     @id @unique
  price       Int
  type        Int
  owner       String
  url         String
  probability Int
  burn        Boolean
}

model NFTsales {
  id             Int @id @unique
  type           Int @unique
  totalSold      Int
  totalSoldValue Int
}
